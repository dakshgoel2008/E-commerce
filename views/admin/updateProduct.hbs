<!doctype html>
<html lang="en">
    <head>
        <title>Update Products</title>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <style>
            .img {
                margin-top: 70px;
            }
            .img-container {
                display: flex;
                justify-content: center;
                align-items: center;
                height: 300px; /* Adjust the height of the container */
                width: 100%; /* Ensure the container spans the width */
                border: 2px solid #ccc; /* Add a border around the container */
                overflow: hidden; /* Ensure the image does not overflow */
                margin-bottom: 20px; /* Add space below the image container */
            }
            .initialProduct {
                max-width: 100%; /* Ensure the image scales within its container */
                max-height: 100%; /* Ensure the image scales within its container */
                display: block; /* Ensure image behaves like a block element */
            }
        </style>
    </head>

    <body>
        {{>nav}}
        <main>
            <div class="container">
                <div class="img">
                    <img src="{{ product.image }}" alt="To be updated" class="initialProduct" />
                </div>
                <form action="/admin/product/update" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Product Name</label>
                        <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            placeholder="Enter new name for {{ product.name }}"
                            value="{{ product.name }}"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Product Price</label>
                        <input
                            type="text"
                            class="form-control"
                            id="price"
                            name="price"
                            placeholder="Enter new price for {{ product.name }}"
                            value="{{ product.price }}"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Product Description</label>
                        <input
                            type="text"
                            class="form-control"
                            id="description"
                            name="description"
                            placeholder="Enter new description for {{ product.name }}"
                            value="{{ product.description }}"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="seller" class="form-label">Seller Name</label>
                        <input
                            type="text"
                            class="form-control"
                            id="seller"
                            name="seller"
                            placeholder="Enter seller for {{ product.name }}"
                            value="{{ product.seller }}"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Product Category</label>
                        <input
                            type="text"
                            class="form-control"
                            id="category"
                            name="category"
                            placeholder="Enter category for {{ product.name }}"
                            value="{{ product.category }}"
                            required
                        />
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Product Image URL</label>
                        <input
                            type="text"
                            class="form-control"
                            id="image"
                            name="image"
                            placeholder="Enter image URL for {{ product.name }}"
                            value="{{ product.image }}"
                            required
                        />
                    </div>
                    <input type="hidden" name="id" value="{{ product._id }}" />
                    <button type="submit" class="btn btn-primary">Update Product</button>
                </form>
            </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
