<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Admin Portal</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <style>
            /* Custom styles for home page */
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                background-color: #f8f9fa;
                color: #333;
            }

            /* Hero section */
            .hero-section {
                background-image: url('path/to/your/hero-image.jpg');
                background-size: cover;
                background-position: center;
                height: 500px;
                display: flex;
                justify-content: center;
                align-items: center;
                color: #fff;
                text-align: center;
                position: relative;
                margin-top: 70px;
                background-color: rgba(178, 17, 17, 0.5);
            }

            .hero-overlay {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }

            .hero-content {
                z-index: 1;
            }

            .hero-section h1 {
                font-size: 3.5rem;
                margin-bottom: 20px;
            }

            .hero-section p {
                font-size: 1.2rem;
                margin-bottom: 30px;
                max-width: 600px;
                margin: 0 auto;
            }

            .cta-buttons {
                margin-top: 20px;
                display: flex;
                justify-content: center;
            }

            .cta-buttons .btn {
                font-size: 1.2rem;
                padding: 15px 30px;
                margin-right: 20px;
                border-radius: 25px;
                text-transform: uppercase;
                font-weight: bold;
            }

            .btn-primary {
                background-color: #f0c14b; /* Amazon's yellow */
                border-color: #a88734; /* Amazon's yellow */
                color: #111; /* Dark text */
            }

            .btn-primary:hover {
                background-color: #ddb347; /* Slightly darker yellow on hover */
                border-color: #c59c41; /* Slightly darker yellow on hover */
            }

            .btn-secondary {
                background-color: #232f3e; /* Flipkart's blue */
                border-color: #232f3e; /* Flipkart's blue */
                color: #fff; /* White text */
            }

            .btn-secondary:hover {
                background-color: #1b2530; /* Slightly darker blue on hover */
                border-color: #1b2530; /* Slightly darker blue on hover */
            }

            .product-card {
                background-color: #fff;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                border-radius: 10px;
                transition: box-shadow 0.3s ease;
                overflow: hidden;
            }

            .product-card:hover {
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

            .product-card img {
                width: 100%;
                height: auto;
                border-top-left-radius: 10px;
                border-top-right-radius: 10px;
            }

            .product-details {
                padding: 15px;
            }

            .product-title {
                font-size: 1.2rem;
                margin-bottom: 10px;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

            .product-price {
                font-size: 1.1rem;
                font-weight: bold;
                color: #007185; /* Amazon's price color */
                margin-bottom: 10px;
            }

            .product-seller {
                font-size: 0.9rem;
                color: #666;
                margin-bottom: 10px;
            }

            .product-actions {
                text-align: center;
                margin-top: 10px;
            }

            .product-actions .btn {
                font-size: 1rem;
                padding: 8px 20px;
                border-radius: 20px;
                font-weight: bold;
            }

            .btn-add-to-cart {
                background-color: #f0c14b; /* Amazon's yellow */
                border-color: #a88734; /* Amazon's yellow */
                color: #111; /* Dark text */
            }

            .btn-add-to-cart:hover {
                background-color: #ddb347; /* Slightly darker yellow on hover */
                border-color: #c59c41; /* Slightly darker yellow on hover */
            }

            @media (max-width: 768px) {
                .hero-section {
                    height: 300px;
                }
                .hero-section h1 {
                    font-size: 2.5rem;
                }
                .hero-section p {
                    font-size: 1rem;
                }
                .cta-buttons .btn {
                    font-size: 1rem;
                    padding: 10px 20px;
                }
            }
        </style>
    </head>
    <body>
        {{>nav}}

        <!-- Hero section -->
        <section class="hero-section">
            <div class="hero-overlay"></div>
            <div class="container hero-content">
                <h1>Welcome to Admin Portal</h1>

                <div class="cta-buttons">
                    <a href="/admin/product/all" class="btn btn-primary">View All Products</a>
                    <a href="/admin/product/add" class="btn btn-secondary">Add New Product</a>
                </div>
            </div>
        </section>

        <!-- Featured products section -->

        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
        <script src="script.js"></script>
    </body>
</html>
