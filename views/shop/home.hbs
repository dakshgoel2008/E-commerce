<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>SHOP</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <style>
            .product-card {
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                padding: 15px;
                border-radius: 12px;
                transition: box-shadow 0.5s ease;
                background-color: #fff;
                margin-bottom: 20px;
            }
            .product-card:hover {
                box-shadow: 0 0 15px rgba(219, 198, 11, 0.544);
            }
            .product-card img {
                width: 100%;
                height: 200px;
                object-fit: contain;
                border-radius: 10px;
            }
            .container {
                margin-top: 79px;
            }

            .category-header {
                margin-top: 30px;
                margin-bottom: 30px;
                padding: 10px;
                background-color: #e9d712;
                border: 1px solid #e0a606;
                border-radius: 20px;
                font-size: 1.5rem;
                font-weight: bold;
                text-align: center;
                box-shadow: 5px 5px 5px #ccc;
            }
            .btn-add-to-cart {
                background-color: #ffc107;
                border-color: #ffc107;
                color: #212529;
                font-weight: bold;
            }
            .btn-add-to-cart:hover {
                background-color: #ffca2c;
                border-color: #ffca2c;
                color: #212529;
            }
            .img-fluid {
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        {{>nav}}
        <main class="container text-center">
            <div class="row">
                {{#each products}}
                <div class="col-md-12">
                    <h3 class="category-header">{{@key}}</h3>
                    <!-- Display category name -->
                    <div class="row">
                        {{#each this}}
                        <div class="col-md-6">
                            <div class="product-card">
                                <a href="/shop/product/details/{{ this.id }}">
                                    <img
                                        src="{{ this.image }}"
                                        alt="Product Image"
                                        class="img-fluid"
                                /></a>
                                <h5>Name: {{ this.name }}</h5>
                                <h5>Price: {{ this.price }}</h5>
                                <h5>Seller: {{ this.seller }}</h5>
                                <a href="/shop/cart/add/{{ this.id }}">
                                    <button class="btn btn-outline-dark btn-add-to-cart">
                                        ADD TO CART
                                    </button></a
                                >
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
