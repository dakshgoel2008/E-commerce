<!doctype html>
<html lang="en">
    <head>
        <title>{{ product.name }}</title>

        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f8f9fa;
            }
            .product-details {
                margin-top: 85px;
                background-color: #fff;
                padding: 20px;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            .product-title {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 10px;
            }
            .product-price {
                font-size: 1.25rem;
                color: #007bff;
                margin-bottom: 15px;
            }
            .product-description {
                margin-bottom: 20px;
            }
            .product-seller {
                font-size: 1rem;
                color: #6c757d;
                margin-bottom: 15px;
            }
            .product-image {
                max-width: 100%;
                border-radius: 8px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            .btn-add-to-cart {
                background-color: #ffc107;
                border-color: #ffc107;
                color: #212529;
                font-weight: bold;
            }
            .btn-add-to-cart:hover {
                background-color: #ffca2c;
                border-color: #ffca2c;
                color: #212529;
            }
            .Heading {
                margin-top: 30px;
            }
            .btn-buy {
                background-color: #ff8707;
                border-color: #ffc107;
                color: #212529;
                font-weight: bold;
                margin-left: 20px;
            }
            .btn-buy:hover {
                background-color: #ff9d2c;
                border-color: #ffca2c;
                color: #212529;
            }
        </style>
    </head>
    <body>
        {{>nav}}
        <main class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="product-details">
                        <div class="row">
                            <div class="col-md-6">
                                <img
                                    src="{{ product.image }}"
                                    alt="{{ product.name }}"
                                    class="product-image"
                                />
                            </div>
                            <div class="col-md-6">
                                <h2 class="product-title">{{ product.name }}</h2>
                                <p class="product-price">$ {{ product.price }}</p>
                                <p class="product-description">{{ product.description }}</p>
                                <p class="product-seller">Sold by: {{ product.seller }}</p>
                                <a href="/shop/cart/add/{{ product.id }}">
                                    <button class="btn btn-lg btn-add-to-cart">
                                        Add to Cart
                                    </button></a
                                >
                                <a href="/shop/cart/add/{{ product.id }}">
                                    <button class="btn btn-lg btn-buy">
                                        Buy Now
                                    </button></a
                                >
                            </div>
                        </div>
                        <ul class="reviews">
                            <h5 class="Heading">Reviews:</h5>
                            {{#each product.reviews as |r|}}
                            <li>{{ r }}</li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </main>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
